<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context="com.example.adeelsultan.phcproject.LoginAsPatient">

    <RelativeLayout
        android:id="@+id/rellaymain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/phcname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paramedic Health Care"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/phcname">

            <Button
                android:id="@+id/iamdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="I'm a Doctor"
                android:background="@drawable/btn_bg"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginLeft="25dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/iampatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="I'm a Patient"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/lightwhite"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellay1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Patient's Email"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/pat_loginemail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Password"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"/>

                <EditText
                    android:id="@+id/pat_loginpassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/et_bg"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:textSize="15sp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rellay2">

            <Button
                android:id="@+id/pat_loginbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"
                android:text="Login"
                android:backgroundTint="@color/lightwhite"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingRight="90dp"
                android:paddingLeft="90dp"
                android:textAllCaps="false"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rellay4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:layout_below="@+id/rellay3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginTop="130dp"
                />

            <Button
                android:id="@+id/pat_signupbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:text="Register here"
                android:backgroundTint="@color/lightwhite"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:textAllCaps="false"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
