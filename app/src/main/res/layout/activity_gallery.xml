<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:weightSum="100">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <ImageView
                    android:id="@+id/imageGallery"
                    android:padding="2dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />

                <TextView
                    android:textStyle="bold"
                    android:text="Name goes here"
                    android:textSize="22sp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imageGallery"
                    android:id="@+id/nameGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:text="Specialization"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/imageGallery"
                    android:layout_below="@id/nameGallery"
                    android:id="@+id/specialtyGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#f56355b4"
                    android:padding="3dp"
                    android:layout_marginStart="30dp"
                    android:gravity="right"
                    android:layout_marginTop="7dp"
                    android:text="Price100$"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/nameGallery"
                    />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/specialtyGallery"
                    android:layout_marginLeft="120dp">
                    <RatingBar
                        android:id="@+id/rattingStar"
                        android:foregroundTint="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:theme="@style/rating_bar"
                        android:layout_marginTop="10dp"
                        android:stepSize="1.0"
                        android:rating="2.0"
                        style = "?android:attr/ratingBarStyleSmall"
                        android:layout_below="@+id/rellay2"/>
                </LinearLayout>


            </RelativeLayout>






            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="35dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms"

                android:layout_marginTop="150dp"
                android:layout_marginLeft="250dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />







            <HorizontalScrollView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_marginTop="180dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_margin="8dp">




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">




                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:padding="5dp"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:text=". Anesthesiology. "
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:padding="5dp"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:text="  Dermatology"
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:padding="5dp"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:text=".  Allergy and immunology,
Latex Allergy,
Hives,
Cancer
Allergy Health Center,
Alzheimer's
Sinusitis,
"
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_marginTop="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:padding="5dp"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:text=". Flu , Cold and Allergies "
                                    android:textColor="#122" />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_margin="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/logo"
                                    android:padding="10dp"/>


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:text=". Headache"
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:text=". Flu"
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:text=". Stroke"
                                    android:textColor="#122" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    android:text=". Heart Patient"
                                    android:textColor="#122" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="470dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_centerHorizontal="true"
                    android:text="Complain"
                    android:backgroundTint="@color/lightwhite"
                    android:background="@drawable/btn_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingRight="90dp"
                    android:paddingLeft="90dp"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="Complain" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>